#include <stdio.h>
#include<conio.h>

#define Total_Elements 5u

void ordAscending(int *ptr_vector, int n);
void displayArray(int *ptr_to_array,int i);

int main(void) {
	int i=Total_Elements;
	int a[i]={20,40,50,30,80};
	printf("Arreglo Inicial \n");
    displayArray(&a[0],);
	ordAscending(&a[0],5);
	printf("\n Arreglo Final \n");
	for(i=0;i<5;i++)
	{
		printf("%d ", a[i]);
	}
	getch();
	return 0;
}

void ordAscending(int *ptr_vector, int n)
{
	int interruptor = 1;
	int *ptr_store=ptr_vector;
	int *ptr_aux=ptr_vector;
	ptr_aux++;
	int mem=0;

	int pasada, j;
	/*ordering cycle*/
	for(pasada = 0; ((pasada < n-1) && interruptor); pasada++)
	{
		interruptor = 0;
		for (j=0; j<n-pasada -1;j++)
		{
			if(*ptr_vector > *(ptr_aux))
			{
				//change if are not in the required sequence
				interruptor = 1;
				mem=*ptr_vector;
				*ptr_vector = *ptr_aux;
				*ptr_aux=mem;
			}
			ptr_vector++;
		    ptr_aux++;
		}
		ptr_vector=ptr_store;
		ptr_aux=ptr_vector;
		ptr_aux++;
	}
}

void displayArray(int *ptr_to_array,int i)
{
	for(i=0;i<5;i++)
	{
		printf("%d ", *ptr_to_array);
		ptr_to_array++;
	}
}
