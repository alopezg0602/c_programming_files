#include <stdio.h>
#include <conio.h>
#include <time.h>

int *reserva(int elementos);

int main()
{

	int **ptr = NULL;
	int c=0;
	/*Se reservan 5 x 5 espacios de 32 bits para el arreglo de enteros*/
	ptr = (int *) reserva(5);

	for( c=0; c<5; c++)
	{
		*ptr = (int *) reserva(5);
		ptr++;
	}
	return 0;
	ptr--;

	/*Se procede a llenar el arreglo*/

    for( c=0; c<5; c++)
    {
        //*ptr = ptr;
        for( d=0; d<5; d++)
        {
            **ptr = rand() % 10;
            (*ptr)++;
        }
        ptr--;
    }
}

int *reserva(int elementos)
{
    int *ptrAux;
    ptrAux = (int *)malloc(elementos*sizeof(int));
    return ptrAux;
}
