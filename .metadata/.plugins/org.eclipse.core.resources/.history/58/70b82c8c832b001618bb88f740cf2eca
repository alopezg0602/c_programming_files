void exerciseCode_14(void)
{
	printf("%s\n",__FUNCTION__);
	int i=0, j=0,elementos=0;
	//gotoxy(10,30);
	printf("Introduce las dimensiones del cuadrado: ");
	scanf("%d", &elementos);
	printf("\n ");
	printf("\n ");
	for (i=1; i<=elementos;i++)
	{
		for(j=1;j<=elementos;j++)
		{
			if(i==1 || i==elementos)
			{
				printf("*");
			}
			else
			{
				if(j==1 || j==elementos)
				{
					printf("*");
				}
				else
				{
					printf(" ");
				}
			}
		}
		printf("\n");
	}
}

